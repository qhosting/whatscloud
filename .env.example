# ===========================================
# ChatCenter Docker Environment Configuration
# ===========================================
# Copy this file to .env and update with your actual values
# DO NOT commit the .env file to version control

# ===========================================
# Database Configuration (MySQL)
# ===========================================
# Database host (use 'db' for Docker, 'localhost' for local development)
DB_HOST=db

# Database name
DB_DATABASE=chatcenter

# Database user (non-root recommended for production)
DB_USER=chatcenter_user

# Database password (CHANGE THIS for production!)
DB_PASSWORD=your_secure_password_here

# Database port (default MySQL port)
DB_PORT=3306

# MySQL root password (for initial setup and admin tasks)
DB_ROOT_PASSWORD=your_secure_root_password_here

# ===========================================
# Application Configuration
# ===========================================
# Application domain (for EasyPanel deployment)
# Examples: chatcenter.yourdomain.com, app.example.com
APP_DOMAIN=localhost

# Full application URL (optional, can be derived from APP_DOMAIN)
# Examples: https://chatcenter.yourdomain.com, http://localhost
APP_URL=http://localhost

# Application port (host machine port)
APP_PORT=80

# Environment (development, staging, production)
APP_ENV=production

# Debug mode (true/false) - set to false in production
APP_DEBUG=false

# API Key for authentication (CHANGE THIS for production!)
API_KEY=your_secure_api_key_here

# ===========================================
# Meta/WhatsApp Business API Configuration
# ===========================================
# Meta Access Token for WhatsApp Business API
META_API_TOKEN=your_meta_api_token_here

# WhatsApp Phone Number ID
META_PHONE_NUMBER_ID=your_phone_number_id_here

# WhatsApp Business Account ID
META_BUSINESS_ID=your_business_id_here

# Meta Webhook Verify Token (for webhook verification)
META_WEBHOOK_TOKEN=your_webhook_token_here

# ===========================================
# OpenAI/AI Configuration (Optional)
# ===========================================
# OpenAI API Key for AI features
OPENAI_API_KEY=your_openai_api_key_here

# AI Model to use (gpt-3.5-turbo, gpt-4, etc.)
OPENAI_MODEL=gpt-3.5-turbo

# ===========================================
# phpMyAdmin Configuration (Optional)
# ===========================================
# phpMyAdmin port (only if using the tools profile)
PHPMYADMIN_PORT=8080

# ===========================================
# Email Configuration (Optional)
# ===========================================
# SMTP settings if email features are used
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=ChatCenter

# ===========================================
# Security & Session Configuration
# ===========================================
# Session lifetime in seconds (86400 = 24 hours)
SESSION_LIFETIME=86400

# Session encryption key (generate a random string)
SESSION_KEY=your_random_session_key_here

# ===========================================
# File Upload Configuration
# ===========================================
# Maximum upload file size in MB
MAX_UPLOAD_SIZE=50

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# ===========================================
# Logging Configuration
# ===========================================
# Log level (debug, info, warning, error)
LOG_LEVEL=error

# Log retention in days
LOG_RETENTION=30

# ===========================================
# NOTES FOR PRODUCTION DEPLOYMENT
# ===========================================
# 1. Change ALL passwords and keys to secure random values
# 2. Set APP_DEBUG=false in production
# 3. Use strong, unique passwords (minimum 16 characters)
# 4. Keep the .env file secure and never commit it to Git
# 5. Regularly rotate API keys and passwords
# 6. Review and adjust phpMyAdmin access (disable if not needed)
# 7. Configure SSL/TLS certificates for HTTPS (recommended with reverse proxy)
